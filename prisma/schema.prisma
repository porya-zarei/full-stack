generator client {
  provider = "prisma-client-js"
  output = "./generated-client"
}

datasource db {
  provider = "mongodb"
  url      = "file:./app.db"
}

model Product {
  id    String @id @map("_id") @default(uuid())
  name  String
  price String
  date  String
  count Int
  order Order @relation(fields: [id], references: [id])
}

model User {
  id              String  @id @map("_id") @default(uuid())
  fullName        String?
  email           String  @unique
  password        String
  userName        String  @unique
  role            Int     @default(2)
  joinedAt        String
  phoneNumber     String?
}

model Order {
  id          String    @id @map("_id") @default(uuid())
  user        String
  supervisor  String      
  products    Product[]
  description String
  date        String
  status      Int       @default(0)
  officialBill Boolean   @default(true)
}
